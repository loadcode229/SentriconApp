<%= form_for @account do |f| %>
    <%= f.label :name %><%= @account.errors.full_messages_for(:name).first %>
    <%= f.text_field :name, :placeholder => (@account.errors.full_messages_for(:name).first || "Enter name here") %>
          <br><br>
    <%= f.label :address %><%= @account.errors.full_messages_for(:address).first  %>
    <%= f.text_field :address %>
          <br><br>
    <%= f.label :phone_number %><%= @account.errors.full_messages_for(:phone_number).first  %>
    <%= f.text_field :phone_number %>
          <br><br>
    <%= f.label :instructions %><%= @account.errors.full_messages_for(:instructions).first  %>
    <%= f.text_area :instructions %>
          <br><br>
    <%= f.submit %>
<% end %>
<h2>Accounts</h2>

<div>
    <% @accounts.each do |a| %>
        <div>
            <h3><%= link_to a.name.titleize, account_stations_path(a) %></h3>
            <ul>
                <li><%= a.address %></li>
                <li><%= a.phone_number %></li>
                <li><%= a.instructions %></li>
            </ul>
        </div>
    <% end %>
</div>
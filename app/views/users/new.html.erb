<%= form_for(@user, url: sign_up_path) do |f| %>
    Username: <%= f.text_field :username, :placeholder => (@user.errors.full_messages_for(:username).first || "Enter username here: ") %>
    <br><br>
    Email: <%= f.text_field :email, :placeholder => (@user.errors.full_messages_for(:email).first || "Enter email here: ") %>
    <br><br>
    Password: <%= f.password_field :password, :placeholder => (@user.errors.full_messages_for(:password).first || "Enter password here: ") %>
    <br><br>
    <%= f.submit "Sign Up" %>
<% end %>
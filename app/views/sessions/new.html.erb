<h2>Log In!</h2>

<br><br>
<div>
    <%= form_for :user, url: '/login' do |f| %>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
        <br><br>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
        <br><br>
        <%= f.submit "Log In" %>
    <% end %>
    <br><br>
    <p>Don't have an account? <%= link_to "Sign Up", new_user_path %></p>
    <p><%= link_to "Return Home", root_path %></p>
</div>
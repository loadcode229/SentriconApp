<%= form_tag('/session', method: :post) do %>
    
    <div class="form_group">
        <%= label_tag(:username, "Your name:") %>

        <%= collection_select(:username, User.all, :name, :user, prompt: "Please select your username from this dropdown") %>
    </div>

    <div class="form_group">
        <%= label_tag(:email, "Your email:") %>

        <%= collection_select(:email, User.all, :email, prompt: "Please select your email from this dropdown") %>
    </div>

    <div class="form-group">
        <%= label_tag(:password, "Your password:") %>
        <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>

    <div class="actions">
        <%= submit_tag("Sign In") %>
    </div>

<% end %>